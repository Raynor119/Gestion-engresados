<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<LinearLayout
		android:layout_width="330dp"
		android:layout_height="559dp"
		android:layout_gravity="center|center_vertical|center_horizontal"
		android:layout_marginTop="0dp"
		android:background="@drawable/braarown"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/inage"
			android:layout_width="150dp"
			android:layout_height="184dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="23dp"
			android:background="#FFFFFF"
			android:src="@mipmap/escudounipamplona1" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="40dp"
			android:layout_marginRight="20dp"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/im"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginTop="5dp"
				android:src="@mipmap/iconct" />

			<EditText
				android:id="@+id/mainEditText1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ems="10"
				android:hint="Usuario"
				android:inputType="textEmailAddress"
				android:textColor="#FFFFFF"
				android:textColorHint="#C0C0C0" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="19dp"
			android:layout_marginRight="20dp"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/imm"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginTop="5dp"
				android:src="@mipmap/contra" />

			<EditText
				android:id="@+id/mainEd1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ems="10"
				android:hint="ContraseÃ±a"
				android:inputType="textPassword"
				android:textColor="#FFFFFF"
				android:textColorHint="#C0C0C0" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="100dp"
			android:layout_marginTop="26dp"
			android:layout_marginRight="85dp"
			android:orientation="horizontal">

			<CheckBox
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Recordarme"
				android:textColor="#FFFFFF" />

		</LinearLayout>

		<TextView
			android:id="@+id/mainTextView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="15dp"
			android:onClick="onclic"
			android:text="Registrarse"
			android:textColor="#808080"
			android:textSize="13sp" />

		<Button
			android:layout_width="160dp"
			android:layout_height="55dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="22dp"
			android:background="@drawable/bbutton"
			android:onClick="onclick"
			android:text="Iniciar Seccion"
			android:textColor="#FFFFFF" />

	</LinearLayout>

</LinearLayout>

