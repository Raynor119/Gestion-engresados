<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical">

	<Button
		android:id="@+id/activityengreButton1"
		android:layout_width="173dp"
		android:layout_height="64dp"
		android:layout_gravity="center_vertical|center_horizontal"
		android:background="@drawable/botoh"
		android:onClick="hojav"
		android:text="Hoja de Vida"
		android:textColor="#FFFFFF" />

	<Button
		android:id="@+id/button"
		android:layout_width="173dp"
		android:layout_height="64dp"
		android:layout_gravity="center_vertical|center_horizontal"
		android:layout_marginTop="70dp"
		android:background="@drawable/botoh"
		android:onClick="aplicaof"
		android:text="Buscar Ofertas de Empleo"
		android:textColor="#FFFFFF" />
	<Button
		android:id="@+id/buttonn"
		android:layout_width="173dp"
		android:layout_height="64dp"
		android:layout_gravity="center_vertical|center_horizontal"
		android:layout_marginTop="70dp"
		android:background="@drawable/botoh"
		android:onClick="aplicaofya"
		android:text="Ver Ofertas Aplicadas"
		android:textColor="#FFFFFF" />

	<Button
		android:id="@+id/button2"
		android:layout_width="173dp"
		android:layout_height="64dp"
		android:layout_gravity="center_vertical|center_horizontal"
		android:layout_marginTop="80dp"
		android:background="@drawable/botoh"
		android:onClick="cerrarcesion"
		android:text="Salir"
		android:textColor="#FFFFFF" />

</LinearLayout>

