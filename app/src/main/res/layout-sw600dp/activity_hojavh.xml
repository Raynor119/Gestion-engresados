<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="5dp">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center|center_horizontal"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="450dp"
			android:layout_height="550dp"
			android:layout_gravity="center_vertical|center_horizontal"
			android:orientation="vertical">

			<ImageView
				android:layout_width="239dp"
				android:layout_height="199dp"
				android:layout_gravity="center_vertical|center_horizontal"
				android:src="@mipmap/leon_general" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="30dp">

				<TextView
					android:layout_width="53dp"
					android:layout_height="23dp"
					android:text="Nombre:" />

				<EditText
					android:id="@+id/nombreh"
					android:layout_width="280dp"
					android:layout_height="47dp"
					android:ems="10"
					android:inputType="textPersonName" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Apellidos:" />

				<EditText
					android:id="@+id/apellidoh"
					android:layout_width="274dp"
					android:layout_height="45dp"
					android:ems="10"
					android:inputType="textPersonName" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="144dp"
					android:layout_height="20dp"
					android:text="Fecha de Nacimiento:" />

				<EditText
					android:id="@+id/fNmh"
					android:layout_width="195dp"
					android:layout_height="45dp"
					android:ems="10"
					android:inputType="textPersonName" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="40dp"
					android:layout_height="21dp"
					android:text="Email:" />

				<EditText
					android:id="@+id/emailh"
					android:layout_width="293dp"
					android:layout_height="44dp"
					android:ems="10"
					android:inputType="textWebEmailAddress" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="50dp"
			android:layout_height="550dp"
			android:layout_gravity="center_vertical|center_horizontal"
			android:orientation="vertical">

		</LinearLayout>

		<LinearLayout
			android:layout_width="450dp"
			android:layout_height="550dp"
			android:layout_gravity="center_vertical|center_horizontal"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="2dp">

				<TextView
					android:layout_width="138dp"
					android:layout_height="24dp"
					android:text="Lugar de Nacimiento:" />

				<EditText
					android:id="@+id/lNmh"
					android:layout_width="238dp"
					android:layout_height="47dp"
					android:ems="10"
					android:inputType="textPersonName" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="37dp"
					android:layout_height="18dp"
					android:text="Edad:" />

				<EditText
					android:id="@+id/edadh"
					android:layout_width="337dp"
					android:layout_height="45dp"
					android:ems="10"
					android:inputType="number" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="146dp"
					android:layout_height="wrap_content"
					android:text="Cedula de Ciudadania:" />

				<EditText
					android:id="@+id/CCh"
					android:layout_width="231dp"
					android:layout_height="44dp"
					android:ems="10"
					android:inputType="number" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="16dp"
					android:text="Lugar de Expedicion:" />

				<EditText
					android:id="@+id/LEXh"
					android:layout_width="244dp"
					android:layout_height="44dp"
					android:ems="10"
					android:inputType="textPersonName" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Ocupacion:" />

				<EditText
					android:id="@+id/ocupacioh"
					android:layout_width="304dp"
					android:layout_height="47dp"
					android:ems="10"
					android:inputType="textPersonName" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="17dp"
					android:text="Direccion de Residencia:" />

				<EditText
					android:id="@+id/dic"
					android:layout_width="229dp"
					android:layout_height="44dp"
					android:ems="10"
					android:inputType="textPersonName" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Estado Civil:" />

				<EditText
					android:id="@+id/estadoh"
					android:layout_width="301dp"
					android:layout_height="44dp"
					android:ems="10"
					android:inputType="textPersonName" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_marginTop="25dp">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Celular:" />

				<EditText
					android:id="@+id/celuj"
					android:layout_width="332dp"
					android:layout_height="44dp"
					android:ems="10"
					android:inputType="number" />

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</FrameLayout>

