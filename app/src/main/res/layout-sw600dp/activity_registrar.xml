<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@mipmap/fondo"
	android:gravity="center">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="736dp"
		android:layout_height="524dp"
		android:layout_gravity="center|center_vertical|center_horizontal"
		android:layout_marginTop="0dp"
		android:background="@drawable/braarown">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center|center_vertical|center_horizontal"
			android:layout_marginTop="30dp"
			android:text="Registrarse"
			android:textColor="#FFFFFF"
			android:textSize="36sp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="736dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center|center_vertical|center_horizontal"
			android:layout_marginTop="15dp"
			android:background="@drawable/braarown">

			<LinearLayout
				android:layout_width="306dp"
				android:layout_height="409dp"
				android:orientation="vertical">

				<ImageView
					android:id="@+id/inage"
					android:layout_width="256dp"
					android:layout_height="277dp"
					android:layout_gravity="center|center_vertical|center_horizontal"
					android:layout_marginLeft="0dp"
					android:layout_marginTop="55dp"
					android:layout_marginRight="0dp"
					android:src="@mipmap/escudounipamplona1"
					android:background="@drawable/imagee"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="429dp"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="75dp"
					android:layout_marginRight="20dp"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/imusu"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:layout_marginTop="5dp"
						android:src="@mipmap/usuamer"/>

					<EditText
						android:id="@+id/nombt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ems="10"
						android:hint="Nombre de Usuario"
						android:textColorHint="#C0C0C0"
						android:textColor="#FFFFFF"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="15dp"
					android:layout_marginRight="20dp"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/im"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:layout_marginTop="5dp"
						android:src="@mipmap/iconct"/>

					<EditText
						android:id="@+id/usurt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ems="10"
						android:hint="Usuario"
						android:inputType="textEmailAddress"
						android:textColor="#FFFFFF"
						android:textColorHint="#C0C0C0"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginTop="19dp"
					android:layout_marginRight="20dp"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/imm"
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:layout_marginTop="5dp"
						android:src="@mipmap/contra"/>

					<EditText
						android:id="@+id/contrnt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ems="10"
						android:hint="ContraseÃ±a"
						android:inputType="textPassword"
						android:textColor="#FFFFFF"
						android:textColorHint="#C0C0C0"/>

				</LinearLayout>

				<Button
					android:id="@+id/btnm"
					android:layout_width="160dp"
					android:layout_height="55dp"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="45dp"
					android:background="@drawable/bbutton"
					android:text="Registrarse"
					android:textColor="#FFFFFF"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

